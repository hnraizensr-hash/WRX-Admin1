  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
  <style>
    body {
      margin:0;
      font-family: 'Poppins', sans-serif;
      background-color: #050508;
      color: #fff;
      display:flex;
      flex-direction:column;
      align-items:center;
      justify-content:flex-start;
      min-height:100vh;
      padding:20px;
    }
    h1 { color:#00e5ff; }
    .user-card {
      background: #0e0e14;
      padding:15px;
      border-radius:12px;
      margin-bottom:12px;
      width:100%;
      max-width:400px;
      display:flex;
      justify-content:space-between;
      align-items:center;
    }
    .user-card.banned { border-left:4px solid #ff0055; }
    .user-card.active { border-left:4px solid #00ff9d; }
    button {
      padding:6px 12px;
      border:none;
      border-radius:6px;
      cursor:pointer;
      font-weight:600;
    }
    button.ban { background:#ff0055; color:#fff; }
    button.unban { background:#00ff9d; color:#000; }
    input { padding:10px; border-radius:6px; border:none; margin-top:10px; width:100%; max-width:400px; }
  </style>
