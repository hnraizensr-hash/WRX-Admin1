<body>

  <h1>WRX Admin Panel</h1>

  <div id="users"></div>

  <input type="text" id="customMsg" placeholder="Type custom message">
  <button onclick="sendMsg()">Send Message</button>

  <script>
    let users = [
      {name:"User1", banned:false, expiry:"10/01/2026"},
      {name:"User2", banned:true, expiry:"15/01/2026"},
      {name:"User3", banned:false, expiry:"20/01/2026"}
    ];

    function renderUsers() {
      const container = document.getElementById('users');
      container.innerHTML = '';
      users.forEach((u,i)=>{
        const card = document.createElement('div');
        card.className = 'user-card ' + (u.banned ? 'banned' : 'active');
        card.innerHTML = `<span>${u.name} | Expiry: ${u.expiry} | ${u.banned?'BANNED':'ACTIVE'}</span>`;
        const btn = document.createElement('button');
        btn.textContent = u.banned?'Unban':'Ban';
        btn.className = u.banned?'unban':'ban';
        btn.onclick = ()=>{
          u.banned = !u.banned;
          renderUsers();
          alert(u.name + ' is now ' + (u.banned?'BANNED':'ACTIVE'));
        }
        card.appendChild(btn);
        container.appendChild(card);
      });
    }

    function sendMsg() {
      const msg = document.getElementById('customMsg').value;
      if(msg) alert("Message sent: " + msg);
    }

    renderUsers();
  </script>

</body>
</html>
